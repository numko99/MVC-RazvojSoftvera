@{



}
@model StudentDodajVM
<style>
    form input, select {
        margin: 2px 10px 10px 0px;
        width: 200px;
        padding: 5px;
    }
</style>
<form asp-action="Snimi" method="post">
    <div style="display:none">
        <label></label><br />
        <input asp-for="ID" />
    </div>
    <div>
        <label>Ime</label><br />
        <input asp-for="Ime" />
    </div>

    <div>
        <label>Prezime</label><br />
        <input asp-for="Prezime" />
    </div>
    <div>
        <label>Datum Rodjenja</label><br />
        <input asp-for="Datum" type="date" />
    </div>
    <div>
        <label>Opstina</label><br />
        <select asp-for="OpstinaID" asp-items="@Model.Opstine">
        </select>

    </div>
    <div>
        <label>Fakultet</label><br />
        <select asp-for="FakultetID" asp-items="@Model.Fakulteti">
        </select>
    </div>
    <div>
        <label>Broj Indeksa</label><br />
        <input asp-for="BrojIndeksa" />
    </div>
    <input type="submit" name="Snimi" value="Sacuvaj" class="btn-success" />
</form>
